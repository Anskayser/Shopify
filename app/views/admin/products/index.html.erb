
<h1><kbd>All Products <kbd></h1>
 
<button type="button" class="btn-small btn-success"><h5><i><%= link_to 'Add a new Product', new_admin_product_path %></i></h5></button>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Price</th>
     <th colspan="2"></th>
  </tr>
  
  <% @products.each do |product| %>
    <tr>
      <td><h2><%= product.name %></h2></td>
      <td><h2><%= product.price %></h2></td>
      <td><h2><img src = <%= product.avatar.url(:thumb)%>><img>  </h2></td>

   	<td><%= link_to 'Show', admin_product_path(product) %></td>
     
      <td><%= link_to 'Destroy', admin_product_path(product),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>

    </tr>
  <% end %>
</table>
 						