<h1><kbd>Sign In</kbd></h1>

<%= form_for(resource, as: resource_name, url: user_session_path(resource_name)) do |f| %>
  <div class=" form-group">
    <%= f.label :email  , class: 'control-label col-sm-2' %>
    <div class="col-sm-10"> 
    <%= f.email_field :email, autofocus: true , class: 'form-control' %><br />
    </div>
  </div>

  <div class="form-group ">
    <%= f.label :password , class: 'control-label col-sm-2' %><br />
     <div class="col-sm-10"> 
    <%= f.password_field :password, autocomplete: "off" , class: 'form-control'  %>
  </div>
</div>
  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me  %>
      
      <%= f.label :remember_me  %>
    </div>
    
  <% end -%>
<br>
<br>
  <div class="actions">
    <%= f.submit "Log in"  , class: 'btn btn-success btn-lg'%>
  </div>



  
<li>
<br>
  <button type="button" class = "btn btn-succes btn-lg  "><%= link_to 'Sign Up ', new_user_registration_path%></button></p>
</li>


<% end %>

